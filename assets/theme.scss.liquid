body { 
  margin: 0;
  color: black;
}
.tar { text-align: right; }
.fw { width: 100%; }
.accent-padding{ padding: 20px; }
.flex-container-no, .flex-container{
  display: flex;
  align-items: center;
}
.tac { text-align: center; }
.accent-section {
  max-width: 1000px;
  margin: 20px auto;
} 
.half { width: 50%; }
.fe { align-self: flex-end; }
.border-white { border: 2px solid #fff; }
@media only screen and (min-width: 1100px) {
  h1 { font-size: 67pt; } 
  h2 { font-size: 34pt; } 
  h3{ font-size: 16pt; } 
  p, table { font-size: 14pt; } 
}
@media only screen and (min-width: 800px) and (max-width: 1099px) {
  h1 { font-size: 57pt; } 
  h2 { font-size: 32pt; } 
  h3{ font-size: 14pt; } 
  p, table { font-size: 12pt; } 
}
@media only screen and (min-width: 589px) and (max-width: 799px) {
  h1 { font-size: 43pt; } 
  h2 { font-size: 30pt; } 
  p, table { font-size: 12pt; }
}
@media only screen and (min-width: 589px) {
  .mo { display: none; }
  .accent-padding { padding: 20px; }
}
@media only screen and (max-width: 588px) {
  h1 { font-size: 22pt; } 
  h2 { font-size: 16pt; } 
  .flex-container { display: block; }
  .flex-container .half { width: 100%; }
  .do { display: none; }
  .accent-padding { padding: 10px; }
  .half { width: 100%; }
}
.accent { font-family: 'Handsdown', sans-serif; }
h1,h2,h3,h4,h5,a, span, input, th, select { font-family: 'Quicksand', sans-serif; }
p, textarea, td, ul, li, .error_message, .success_message { font-family: 'Quicksand', sans-serif; } 
/*index page*/
