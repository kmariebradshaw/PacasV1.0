    </div>
  </section>
</div>
<script>
  $('.continue').click(function() {
    $(this).closest('section').hide().next('section').fadeIn();
  })

$( "#shaver" ).click(function() {
  $('.slide1').addClass('vis-hid')
  $( "#shaver" ).animate({
    top: "-=250",
    left: "-=50px",
  }, 1000, function() {
    $( "#shaver" ).animate({
      top: "+=70",
    }, 1000, function() {
                        $('#clothed-paca').attr("src", "{{'naked-paca1.png' | asset_url }}");

      $('#fluff1').removeClass('vis-hid');
      $( "#shaver" ).animate({
        left: "+=50px",
        top: "-=80",
      }, 500, function() {
        $( "#shaver" ).animate({
          top: "+=90",
        }, 1100, function() {
                            $('#clothed-paca').attr("src", "{{'naked-paca2.png' | asset_url }}");

          $('#fluff2').removeClass('vis-hid');
          $('#shaver').animate({
            left: "+=50px",
            top: "-=70px",

          }, 600, function() {
            $(this).css('-webkit-transform','rotate(-45deg)'); 
            $('#shaver').animate({
              top: "+=50px",
              left: "+=30px",
            }, 1000, function() {
              $('#fluff3').removeClass('vis-hid')
              $(this).css('-webkit-transform','rotate(0deg)'); 
              $('#shaver').animate({
                top: "-=90px",
                left: "-=30px",
              }, 500, function() {
                $('#shaver').animate({
                  top: "+=90px"
                }, 1300, function() {
                  $('#clothed-paca').attr("src", "{{'naked-paca.png' | asset_url }}");
                  $('#fluff4').removeClass('vis-hid')
                  $('#shaver').hide();
                })
              })
            })
          })
       });
    
    });
    });
  });
});
